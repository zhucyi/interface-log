{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "rules": {
    "@typescript-eslint/no-this-alias": [
      "error",
      {
        "allowedNames": ["self"] // Allow `const self = this`; `[]` by default
      }
    ]
  }
}
